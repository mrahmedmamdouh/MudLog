<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:background="#f4f4f4">


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="String Weight In mud"
        android:textSize="24sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="15dp"
            android:text="BHA"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/editText"
            android:layout_width="112dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView2"
            android:layout_marginStart="31dp"
            android:layout_toEndOf="@+id/textView9"
            android:ems="10"
            android:inputType="number|numberDecimal" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/editText"
            android:layout_alignBottom="@+id/editText"
            android:layout_marginStart="27dp"
            android:layout_toEndOf="@+id/editText"
            android:text="Ton"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView2"
            android:layout_below="@+id/editText"
            android:layout_marginTop="29dp"
            android:padding="0dp"
            android:text="DP 4''"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/editText2"
            android:layout_width="112dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView9"
            android:layout_alignStart="@+id/editText"
            android:ems="10"
            android:inputType="number|numberDecimal" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView11"
            android:layout_alignTop="@+id/textView9"
            android:text="Meter" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView9"
            android:layout_below="@+id/textView9"
            android:layout_marginTop="30dp"
            android:text='DP 5" (19.5)'
            android:textSize="18sp" />

        <EditText
            android:id="@+id/editText3"
            android:layout_width="112dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView10"
            android:layout_marginStart="43dp"
            android:layout_toEndOf="@+id/textView10"
            android:ems="10"
            android:inputType="number|numberDecimal" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView10"
            android:layout_alignBottom="@+id/textView10"
            android:layout_marginStart="23dp"
            android:layout_toEndOf="@+id/textView12"
            android:text="Meter" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView10"
            android:layout_below="@+id/textView10"
            android:layout_marginTop="39dp"
            android:text='DP 5" (25.6)'
            android:textSize="18sp" />

        <EditText
            android:id="@+id/editText4"
            android:layout_width="112dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView14"
            android:layout_alignStart="@+id/editText3"
            android:ems="10"
            android:inputType="number|numberDecimal" />

        <TextView
            android:id="@+id/textView15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/editText4"
            android:layout_alignStart="@+id/textView13"
            android:text="Meter" />

        <TextView
            android:id="@+id/textView16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView14"
            android:layout_below="@+id/textView14"
            android:layout_marginTop="53dp"
            android:text="MUD WEIGHT"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/editText5"
            android:layout_width="112dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/button15"
            android:layout_marginBottom="35dp"
            android:layout_toStartOf="@+id/textView13"
            android:ems="10"
            android:inputType="number|numberDecimal" />

        <TextView
            android:id="@+id/textView17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/editText5"
            android:layout_alignStart="@+id/textView15"
            android:text="S.G"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textView18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/textView16"
            android:layout_marginBottom="54dp"
            android:layout_marginStart="11dp"
            android:text="String Weight In Mud"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView19"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView18"
            android:layout_alignBottom="@+id/textView18"
            android:layout_toEndOf="@+id/button15"
            android:autoText="false"
            android:editable="false"
            android:inputType="number"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView19"
            android:layout_alignBottom="@+id/textView19"
            android:layout_toEndOf="@+id/textView17"
            android:text="Ton"
            android:textSize="14sp" />

        <Button
            android:id="@+id/button15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textView19"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="32dp"
            android:text="Calculate"
            android:onClick="Calculate"/>
    </RelativeLayout>

</LinearLayout>